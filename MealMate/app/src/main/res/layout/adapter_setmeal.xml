<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/setMealName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="식단 구분 TextView"
        />
    <ListView
        android:id="@+id/listView_setFood"
        android:layout_width="match_parent"
        android:layout_height="500px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">

         <Button
            android:id="@+id/btn_meal_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_meal_add"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/btn_meal_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_meal_delete"
            android:scaleType="fitCenter" />


    </LinearLayout>


</LinearLayout>