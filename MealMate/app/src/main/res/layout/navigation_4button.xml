<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"
    android:background="@drawable/navigation_bar">

    <Button
        android:id="@+id/btnHome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginVertical="5dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_menu_home"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnCalendar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCalendar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginVertical="5dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_menu_calendar"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnHome"
        app:layout_constraintRight_toLeftOf="@id/btnFood"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFood"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginVertical="5dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_menu_food"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnCalendar"
        app:layout_constraintRight_toLeftOf="@id/btnMyPage"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMyPage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginVertical="5dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_menu_user"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnFood"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
