<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResearchActivity"
    android:orientation="vertical"
    android:id="@+id/parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/c1"
        >

        <ViewFlipper
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:id="@+id/firstPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별을 선택하세요"/>

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남자"/>
                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여자"/>

                </RadioGroup>'
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/secondPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_ch"
                    android:layout_marginBottom="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="키와 몸무게를 입력해주세요"/>

                <EditText
                    android:id="@+id/user_height"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="cm"
                    />

                <EditText
                    android:id="@+id/user_weight"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="kg"/>


            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:id="@+id/thirdPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginBottom="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="활동량을 선택해주세요"/>

                <RadioGroup
                    android:id="@+id/user_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/user_work_index1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거의 없다(거의 좌식행활을 하고 운동 안함)"/>
                    <RadioButton
                        android:id="@+id/user_work_index2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조금있다(활동량이 보통이거나 주1-3회 운동)"/>
                    <RadioButton
                        android:id="@+id/user_work_index3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통(활동량이 다소 많거나 주 3-5회 운동)"/>
                    <RadioButton
                        android:id="@+id/user_work_index4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="꽤 있다(활동량이 많거나, 주 6-7회 운동)"/>
                    <RadioButton
                        android:id="@+id/user_work_index5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="활동량이 매우 많거나, 거의 매일 하루 2번 운동"/>

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/Page4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동, 식단기록의 목적을 선택해주세요"/>

                <RadioGroup
                    android:id="@+id/user_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/bulk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="벌크업(Bulk)"/>

                    <RadioButton
                        android:id="@+id/diet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="다이어트(diet)"/>

                    <RadioButton
                        android:id="@+id/maintain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유지,관리(maintain)"/>

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/Page5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용자의 이름 혹은 닉네임을 입력하세요"/>

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="닉네임 혹은 이름"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/end_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView

                    android:layout_marginBottom="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이를 입력하세요"/>

                <EditText
                    android:id="@+id/user_age"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="나이"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:text="완료 되었습니다!"/>
                <TextView
                    android:id="@+id/purpose_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    />

                <TextView
                    android:id="@+id/test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


        </ViewFlipper>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_marginLeft="30sp"
        android:id="@+id/prev"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"/>

    <Button
        android:layout_marginRight="30sp"
        android:id="@+id/next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"/>

    <Button
        android:layout_marginTop="30sp"
        android:id="@+id/startMealMate"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계산"
        app:layout_constraintTop_toBottomOf="@+id/c1"
        app:layout_constraintRight_toLeftOf="@+id/next"
        app:layout_constraintLeft_toRightOf="@+id/prev"/>

    <Button
        android:layout_marginTop="30sp"
        android:id="@+id/reStart"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다시 작성하기"
        app:layout_constraintTop_toBottomOf="@+id/startMealMate"
        app:layout_constraintRight_toLeftOf="@+id/next"
        app:layout_constraintLeft_toRightOf="@+id/prev"/>

</androidx.constraintlayout.widget.ConstraintLayout>


