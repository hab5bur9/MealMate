<?xml version="1.0" encoding="utf-8"?>
<!-- 홈/캘린더 식단 list -->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 칼로리 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 목표 칼로리 -->
            <TextView
                android:id="@+id/tv_purpose_kcal"
                android:text="2000"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/notosans_medium"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_kcal_text1" />
            <!-- kcal 중 -->
            <TextView
                android:id="@+id/tv_kcal_text1"
                android:text="kcal 중"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosans_medium"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_purpose_kcal"
                app:layout_constraintRight_toLeftOf="@id/tv_user_kcal" />
            <!-- 현재 섭취한 칼로리 -->
            <TextView
                android:id="@+id/tv_user_kcal"
                android:text="00"
                android:textSize="16dp"
                android:fontFamily="@font/notosans_medium"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_kcal_text1"
                app:layout_constraintRight_toLeftOf="@id/tv_kcal_text2"/>
            <!-- kcal -->
            <TextView
                android:id="@+id/tv_kcal_text2"
                android:text="kcal"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosans_medium"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_user_kcal"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/include_datetime_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_datetime"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_meal_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/include_datetime_info"
            tools:listitem="@layout/adapter_meal"
            tools:itemCount="3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>