        <Button
            android:id="@+id/view_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text ="chart info" />
        <include layout="@layout/include_meallist"/>

    </LinearLayout>
</layout>